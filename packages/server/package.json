{
  "name": "plume-ssr-server",
  "version": "1.0.2",
  "description": "A framework to create an SSR server for a Plume project",
  "author": "Aur√©lien Manteaux <amanteaux@coreoz.com> (https://coreoz.com)",
  "contributors": [
    "Wail Latif <wlatif@coreoz.com> (https://coreoz.com)"
  ],
  "repository": "https://github.com/coreoz/plume-ssr",
  "homepage": "https://github.com/coreoz/plume-ssr",
  "license": "Apache-2.0",
  "keywords": [
    "react",
    "ssr",
    "plume"
  ],
  "scripts": {
    "build": "yarn tsc:cjs && yarn tsc:esm",
    "tsc:cjs": "ttsc --module commonjs --outDir build/cjs -p tsconfig.json",
    "tsc:esm": "ttsc --module esnext --outDir build/esm -p tsconfig.json",
    "clean": "rm -rf build",
    "typescript": "tsc --noEmit --outDir build/esm -p tsconfig.json",
    "eslint": "eslint src --ext .ts",
    "test": "jest --config jest.config.ts",
    "prepare-release": "yarn clean && yarn typescript && yarn eslint && yarn test && yarn build"
  },
  "main": "build/cjs/index.js",
  "typings": "build/esm/index.d.ts",
  "module": "build/esm/index.js",
  "engines": {
    "node": ">=10"
  },
  "sideEffects": false,
  "peerDependencies": {
    "dayjs": "^1.0.0",
    "esbuild": "^0.16.12",
    "express": "^1.0.0",
    "micro-observables": "^1.7.2",
    "minimist": "^1.0.0",
    "path": "^0.4.9",
    "plume-ssr-browser": "workspace:^",
    "plume-ts-di": "^1.2.3",
    "rollup": "^3.8.1",
    "simple-http-rest-client": "^1.0.0",
    "simple-logging-system": "^1.0.0",
    "vite": "^4.0.3"
  },
  "devDependencies": {
    "@jest/types": "^29.2.1",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.2",
    "@types/node-fetch": "2.6.2",
    "@types/react": "^18.0.26",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "dayjs": "^1.11.5",
    "esbuild": "^0.16.12",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "express": "^4.18.2",
    "jest": "^29.2.1",
    "jest-config": "^29.2.1",
    "micro-observables": "^1.7.2",
    "minimist": "^1.2.7",
    "node-fetch": "2.6.7",
    "path": "^0.12.7",
    "plume-ssr-browser": "workspace:^",
    "plume-ts-di": "^1.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2",
    "rollup": "^3.8.1",
    "simple-http-rest-client": "^2.0.2",
    "simple-logging-system": "^1.1.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-transformer-classname": "^2.0.0",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.4",
    "vite": "^4.0.3"
  },
  "files": [
    "build/**/*.*"
  ],
  "packageManager": "yarn@3.3.1"
}
